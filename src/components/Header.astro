<script>
  document.addEventListener('DOMContentLoaded', function() {
    const header = document.getElementById('header') as HTMLElement | null;
    const mobileMenuBtn = document.getElementById('mobile-menu-btn') as HTMLButtonElement | null;
    const mobileMenu = document.getElementById('mobile-menu') as HTMLElement | null;
    const hamburgerIcon = document.getElementById('hamburger-icon') as HTMLElement | null;
    const closeIcon = document.getElementById('close-icon') as HTMLElement | null;
    const mobileLinks = document.querySelectorAll('.mobile-link') as NodeListOf<HTMLAnchorElement>;
    const desktopLinks = document.querySelectorAll('nav a[href^="#"]') as NodeListOf<HTMLAnchorElement>;
    
    let isMenuOpen = false;
    
    // Função para scroll suave com compensação do header
    function smoothScrollTo(targetId: string) {
      const targetElement = document.getElementById(targetId.substring(1));
      if (targetElement && header) {
        const headerHeight = header.offsetHeight;
        const targetPosition = targetElement.offsetTop - headerHeight;
        
        window.scrollTo({
          top: targetPosition,
          behavior: 'smooth'
        });
      }
    }
    
    // Adicionar smooth scroll para links desktop
    desktopLinks.forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const href = link.getAttribute('href');
        if (href && href.startsWith('#')) {
          smoothScrollTo(href);
        }
      });
    });
    
    // Função para alternar menu
    function toggleMenu() {
      isMenuOpen = !isMenuOpen;
      
      if (mobileMenu && hamburgerIcon && closeIcon) {
        if (isMenuOpen) {
          mobileMenu.classList.remove('translate-x-full');
          mobileMenu.classList.add('translate-x-0');
          // Garantir que cubra toda a tela
          mobileMenu.style.position = 'fixed';
          mobileMenu.style.top = '0';
          mobileMenu.style.left = '0';
          mobileMenu.style.width = '100vw';
          mobileMenu.style.height = '100vh';
          mobileMenu.style.backgroundColor = '#000000';
          mobileMenu.style.zIndex = '60';
          hamburgerIcon.classList.add('hidden');
          closeIcon.classList.remove('hidden');
          document.body.style.overflow = 'hidden'; // Previne scroll
        } else {
          mobileMenu.classList.add('translate-x-full');
          mobileMenu.classList.remove('translate-x-0');
          hamburgerIcon.classList.remove('hidden');
          closeIcon.classList.add('hidden');
          document.body.style.overflow = 'auto'; // Restaura scroll
        }
      }
    }
    
    // Event listener para botão hamburger
    if (mobileMenuBtn) {
      mobileMenuBtn.addEventListener('click', toggleMenu);
    }
    
    // Fechar menu ao clicar em links mobile e aplicar smooth scroll
    mobileLinks.forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const href = link.getAttribute('href');
        
        if (isMenuOpen) {
          toggleMenu();
        }
        
        // Aplicar smooth scroll após fechar o menu
        setTimeout(() => {
          if (href && href.startsWith('#')) {
            smoothScrollTo(href);
          }
        }, 300); // Aguarda a animação do menu fechar
      });
    });
    
    // Fechar menu com tecla ESC
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && isMenuOpen) {
        toggleMenu();
      }
    });
    
    // Header scroll background
    if (header) {
      function handleScroll() {
        if (window.scrollY > 100) {
          if (header) {
            header.classList.add('bg-black/90', 'backdrop-blur-md', 'shadow-lg');
            header.classList.remove('bg-opacity-50');
          }
        } else {
          if (header) {
            header.classList.remove('bg-black/90', 'backdrop-blur-md', 'shadow-lg');
            header.classList.add('bg-opacity-50');
          }
        }
      }

      handleScroll();
      window.addEventListener('scroll', handleScroll);
    }
  });
</script>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const carousel = document.getElementById('membros-carousel');
    const dots = document.querySelectorAll('.carousel-dot');
    let currentSlide = 0;
    const totalSlides = 4;

    if (!carousel || dots.length === 0) return;

    // Função para ir para um slide específico
    function goToSlide(slideIndex: number) {
      if (!carousel) return;
      
      currentSlide = slideIndex;
      const translateX = -slideIndex * 100;
      carousel.style.transform = `translateX(${translateX}%)`;
      
      // Atualizar indicadores
      dots.forEach((dot, index) => {
        if (index === slideIndex) {
          dot.classList.remove('bg-[#b9963d]/30');
          dot.classList.add('bg-[#b9963d]');
        } else {
          dot.classList.remove('bg-[#b9963d]');
          dot.classList.add('bg-[#b9963d]/30');
        }
      });
    }

    // Event listeners para os indicadores
    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        goToSlide(index);
      });
    });

    // Auto-play opcional (descomentado se quiser)
    // setInterval(() => {
    //   currentSlide = (currentSlide + 1) % totalSlides;
    //   goToSlide(currentSlide);
    // }, 4000);

    // Suporte para swipe em touch
    let startX = 0;
    let isDragging = false;

    carousel.addEventListener('touchstart', (e) => {
      startX = e.touches[0].clientX;
      isDragging = true;
    });

    carousel.addEventListener('touchend', (e) => {
      if (!isDragging) return;
      
      const endX = e.changedTouches[0].clientX;
      const diffX = startX - endX;
      
      if (Math.abs(diffX) > 50) { // Mínimo de 50px para considerar swipe
        if (diffX > 0 && currentSlide < totalSlides - 1) {
          // Swipe para esquerda - próximo slide
          goToSlide(currentSlide + 1);
        } else if (diffX < 0 && currentSlide > 0) {
          // Swipe para direita - slide anterior
          goToSlide(currentSlide - 1);
        }
      }
      
      isDragging = false;
    });
  });
</script>

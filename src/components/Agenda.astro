// Agenda.astro - Seção de Agenda de Shows da banda Plano Marshall
---

<section id="agenda" class="py-20 bg-[#2e2e2e] flex flex-col items-center justify-center">
  <div class="container px-4 md:px-6">
    <h2 class="text-3xl md:text-4xl font-bebas mb-12 text-[#b9963d] uppercase tracking-wider text-center font-bebas-neue">
      Próximos Shows
    </h2>

    <div class="space-y-6  ">
      <!-- Show 1 -->
      <article class="bg-black p-6 rounded-md flex flex-col md:flex-row md:items-center justify-between gap-4 hover:border-l-4 hover:border-[#b9963d] transition-all duration-300">
        <div class="flex flex-col md:flex-row md:items-center gap-4 md:gap-8 text-center md:text-left">
          <div class="text-center">
            <time class="text-[#b9963d] text-xl font-bebas" datetime="2024-06-25">22</time>
            <p class="text-[#e0e0e0]">JUNHO</p>
          </div>
          <div>
            <h3 class="text-xl font-bebas text-[#b9963d] tracking-wider uppercase">Jimi's Bar</h3>
            <p class="text-[#e0e0e0]">Jaú, SP</p>
            <p class="text-[#e0e0e0] text-sm mt-1">20:00</p>
          </div>
        </div>
        <div class="flex justify-center md:justify-end">
          <a 
            href="https://www.instagram.com/jimis_bar/"
            target="_blank"
            rel="noopener noreferrer" 
            class="bg-[#b9963d] hover:bg-[#caa342] text-black font-bold px-6 py-3 rounded transition-colors inline-flex items-center gap-2 text-center"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
